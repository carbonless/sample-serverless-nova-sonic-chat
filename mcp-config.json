{
  "mcpServers": {
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    },
    "filesystem": {
      "command": "uvx",
      "args": ["mcp-server-filesystem", "/tmp"]
    },
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time"]
    },
    "baseball": {
      "command": "uvx",
      "args": ["mcp-server-sports", "--sport=baseball"]
    }
  }
}